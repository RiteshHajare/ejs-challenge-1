<%- include("partials/header"); -%>
<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="">Title</label>
    <input class="form-control" type="text" name="title" autocomplete="on">
  </div>
  <div class="form-group">
    <label for="">Post</label>
    <textarea class="form-control" name="post" cols="40" rows="8"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

